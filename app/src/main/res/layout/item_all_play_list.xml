<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" 
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:orientation="vertical"
    android:padding="10dp"
    >
    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/img_all_play_list"
            android:layout_width="@dimen/defaultAlbumSize"
            android:layout_height="@dimen/defaultAlbumSize"
            />
    </FrameLayout>

    <TextView
        android:maxWidth="200dp"
        android:id="@+id/tv_all_play_list_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"
        android:text="@string/defaultSongTitle"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        />
    <TextView
        android:maxWidth="200dp"
        android:text="@string/variousArtists"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/gray"
        />

</LinearLayout>